<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailItemCl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailPlayIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/trailer_play"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/detailTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/detailPlayIcon"
        android:layout_marginLeft="15dp"
        android:text="Trailer"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/detailPlayIcon"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>